{
  "name": "data-unit-converter",
  "description": "A simple data unit converter",
  "version": "1.2.0",
  "author": "Jhordy Gavinchu",
  "keywords": [
    "react",
    "data-conversion",
    "mathjs",
    "typescript"
  ],
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite preview",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "ts-check": "tsc -b --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "validate": "pnpm lint && pnpm ts-check && pnpm test --run",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@primer/octicons-react": "^19.21.0",
    "mathjs": "^15.1.0",
    "motion": "^12.23.24",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-select": "^5.10.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2",
    "vitest": "^4.0.9"
  }
}
