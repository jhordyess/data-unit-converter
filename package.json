{
  "name": "data-unit-converter",
  "description": "A simple data unit converter",
  "version": "1.1.0",
  "author": "Jhordy Gavinchu <dev@jhordyess.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "react",
    "data-conversion",
    "mathjs",
    "typescript"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "yarn validate && vite build",
    "preview": "yarn build && vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check:ts": "tsc -b --noEmit",
    "deploy": "yarn build && gh-pages -d dist",
    "test": "vitest",
    "validate": "yarn check:ts && yarn lint && yarn test --run"
  },
  "dependencies": {
    "@primer/octicons-react": "^19.14.0",
    "mathjs": "^14.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-select": "^5.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "gh-pages": "^6.3.0",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.4.2",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.0.11",
    "vitest": "^3.0.5"
  },
  "packageManager": "yarn@4.6.0"
}
